{
  "expo": {
    "name": "Knote",
    "slug": "Knote",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "knote",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0F"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.knote.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Knote needs microphone access to record voice notes.",
        "UIBackgroundModes": [
          "audio"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0A0F"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.knote.app"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-localization",
      "expo-font",
      [
        "expo-av",
        {
          "microphonePermission": "Knote needs microphone access to record voice notes."
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "6090a9c6-90b0-463e-b1bd-03653ee56bd7"
      }
    }
  }
}
